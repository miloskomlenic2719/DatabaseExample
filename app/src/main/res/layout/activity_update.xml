<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvIdStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:hint="Id student"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etIndeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etImeStudenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Indeks"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etImeStudenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPrezimeStudenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Ime studenta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPrezimeStudenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etBrojBodova"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-200dp"
        android:ems="10"
        android:hint="Prezime studenta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etBrojBodova"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Broj bodova"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btAzuriraj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:text="Azuriraj" />
</RelativeLayout>